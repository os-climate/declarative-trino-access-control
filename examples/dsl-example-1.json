{
    "admin-groups": ["admins"],
    "public-tables": true,
    "catalogs": [
        {
            "catalog": "dev",
            "admin-groups": [".*"],
            "public-tables": true
        },
        {
            "catalog": "prod",
            "admin-groups": ["workflow_a_dev", "workflow_b_dev"],
            "public-tables": true
        }
    ],
    "schemas": [
        {
            "catalog": "dev",
            "schema": "sandbox",
            "admin-groups": [".*"],
            "public-tables": true
        },
        {
            "catalog": "prod",
            "schema": "workflow_a",
            "admin-groups": ["workflow_a_dev"],
            "public-tables": false
        },
        {
            "catalog": "prod",
            "schema": "workflow_b",
            "admin-groups": ["workflow_b_dev"],
            "public-tables": true
        }
    ],
    "tables": [
        {
            "catalog": "prod",
            "schema": "workflow_a",
            "table": "userfacing",
            "admin-groups": ["workflow_a_dev"],
            "public": false,
            "column-acl": [
                {
                    "groups": ["workflow_a_quant"],
                    "hide-columns": ["dev_a"]
                },
                {
                    "groups": ["workflow_a_user"],
                    "hide-columns": ["quant_a"]
                }
            ]
        },
        {
            "catalog": "prod",
            "schema": "workflow_a",
            "table": "backend",
            "admin-groups": ["workflow_a_dev"],
            "public": false
        },
        {
            "catalog": "prod",
            "schema": "workflow_b",
            "table": "frontend",
            "admin-groups": ["workflow_b_dev"],
            "public": true,
            "column-acl": [
                {
                    "groups": ["workflow_b_quant"],
                    "hide-columns": ["access", "dev_b"]
                },
                {
                    "hide-columns": ["quant_b"]
                }
            ],
            "row-acl": {
                "type": "filter",
                "filter": "contains(current_groups(), access) or access = 'public'"
            }
        }
    ]
}
